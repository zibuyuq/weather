<RelativeLayout
    android:id="@+id/app_bar"
    android:background="@drawable/bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="#1884ED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/b"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu"
                />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/top"
            android:layout_marginTop="32dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/up"
                    android:background="#90000000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tmp"
                            android:text="..."
                            android:textSize="50sp"
                            android:textColor="#ffffff"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/tb"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="90dp"
                            android:layout_toRightOf="@+id/tmp" />
                        <TextView
                            android:text="..."
                            android:id="@+id/text"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:layout_below="@id/tmp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_below="@+id/text"
                            android:layout_marginTop="80dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="..."
                                android:textSize="20sp"
                                android:gravity="center"
                                android:id="@+id/text1"
                                android:textColor="#ffffff"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="20sp"
                                android:id="@+id/text2"
                                android:gravity="center"
                                android:text="相对湿度"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:textColor="#ffffff"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_toRightOf="@id/text1"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="20sp"
                                android:id="@+id/text3"
                                android:text="体感温度"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:textColor="#ffffff"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_toRightOf="@id/text2"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_below="@+id/ll"
                            android:layout_marginTop="-15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="..."
                                android:textSize="20sp"
                                android:id="@+id/text4"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="#ffffff"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="..."
                                android:textSize="20sp"
                                android:id="@+id/text5"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="#ffffff"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="..."
                                android:id="@+id/text6"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textColor="#ffffff"
                                android:layout_width="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/four_list"
                    android:background="#90000000"
                    android:layout_marginTop="320dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ListView
                        android:id="@+id/item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ListView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/three"
                    android:background="#90000000"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/four_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/kq"
                        android:textSize="20sp"
                        android:text="空气质量:"
                        android:textColor="#ffffff"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="..."
                        android:id="@+id/zl"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/kq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/zl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="AQI"
                            android:id="@+id/aq"
                            android:textSize="30sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textColor="#ffffff"
                            android:layout_below="@+id/kq"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="PM2.5"
                            android:id="@+id/pm"
                            android:textSize="30sp"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColor="#ffffff"
                            android:layout_below="@+id/kq"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="..."
                            android:id="@+id/aqi"
                            android:textSize="30sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="#ffffff"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/ll1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="..."
                            android:id="@+id/pm25"
                            android:textSize="30sp"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColor="#ffffff"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/ll1"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:background="#90000000"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/three"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/jy"
                        android:text="建议:"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="..."
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:id="@+id/suggesstion"
                        android:layout_below="@+id/jy"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </RelativeLayout>


        </ScrollView>

        <include
            layout="@layout/menue2"
            android:id="@+id/menu2"
            ></include>

        <include
            layout="@layout/menue1"
            android:id="@+id/menu1"
            ></include>

        <include
            layout="@layout/menue"
            android:id="@+id/menu"
            ></include>



    </RelativeLayout>
</RelativeLayout>